<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.model.Borrower" table="BORROWER">
		<id name="borrowerID" column="BORROER_ID" type="long">
			<generator class="native" />
		</id>
		<property name="firstName" column="FIRST_NAME" not-null="true"
			type="string" />
		<property name="lastName" column="LAST_NAME" not-null="true"
			type="string" />
<!--	<property name="matriculationNumber" column="MATRICULATION_NUMBER" not-null="false"
			type="integer" />  -->
		<set name="lendingProcesses" table="MAPPING_LENDING_PROCESSES">
			<key column="borrowerID" />
			<many-to-many class="de.nak.librarymgmt.model.LendingProcess"
				column="lendingProcessID" unique="true"></many-to-many>
		</set>
	</class>
</hibernate-mapping>

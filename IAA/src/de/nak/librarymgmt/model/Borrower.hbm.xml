<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.model.Borrower" table="Borrower">
		<id name="borrowerID" column="BORROER_ID" type="long">
			<generator class="native" />
		</id>
		<property name="firstName" column="FIRSTNAME" not-null="true"
			type="string" />
		<property name="lastName" column="LASTNAME" not-null="true"
			type="string" />
			<set name="lendingProcesses" table="MAPPING_LENDING_PROCESSES">
				<key column="borrowerID"/>
				<many-to-many class="de.nak.librarymgmt.model.LendingProcess" column="lendingProcessID" unique="true"></many-to-many>
			</set>
	</class>
</hibernate-mapping>

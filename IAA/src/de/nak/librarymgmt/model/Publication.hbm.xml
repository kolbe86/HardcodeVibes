<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.model.Publication" table="PUBLICATION">
		<id name="id" column="ID" type="long">
			<generator class="sequence" />
		</id>
		<property name="title" column="TITLE" type="string" not-null="true" />
		<property name="autor" column="AUTOR" type="string" not-null="true" />
		<property name="publicationDate" column="PUBLICATIONDATE"
			type="timestamp" />
		<property name="keyword" column="KEYWORD" not-null="true" />
		<property name="condition" not-null="true" />

		<many-to-one name="lender" column="LENDER" class="Lender"
			not-null="true" />
		<many-to-one name="publication" column="PUBLICATION"
			unique="true" class="Publication" not-null="true" />
	</class>
</hibernate-mapping>
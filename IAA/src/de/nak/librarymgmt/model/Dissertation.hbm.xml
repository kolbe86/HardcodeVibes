<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.model.Dissertation" table="DISSERTATION">
		<id name="id" column="DISSERTATION_ID" type="long">
			<generator class="sequence" />
		</id>
		<property name="title" column="TITLE" type="string" not-null="true" />
		<set name="authors" table="DISSERTATION_AUTHORS">
		<key column="DISSERTATION_ID"/>
		<element type="string" column="AUTHOR"/>
		</set>
		<property name="publicationDate" column="PUBLICATIONDATE"
			type="timestamp" />
		<set name="keywords" table="DISSERTATION_KEYWORDS">
		<key column="DISSERTATION_ID"/>
		<element type="string" column="KEYWORD"/>
		</set>
		<property name="condition" not-null="true" type="string" />
	</class>
</hibernate-mapping>
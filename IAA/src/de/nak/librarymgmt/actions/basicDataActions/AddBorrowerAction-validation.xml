<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">


<validators>
	<field name="borrowerBean.matriculationNumber">
		<field-validator type="required">
			<message>Bitte geben Sie eine Matrikelnummer ein.</message>
		</field-validator>
	</field>
		<field name="borrowerBean.firstName">
		<field-validator type="requiredstring">
			<message>Bitte geben Sie ein Vornamen ein.</message>
		</field-validator>
	</field>
		<field name="borrowerBean.lastName">
		<field-validator type="requiredstring">
			<message>Bitte geben Sie ein Nachnamen.</message>
		</field-validator>
	</field>
</validators> 
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.Lender" table="TABLE">
		<id name="id" column="ID" type="long">
			<generator class="native" />
		</id>
		<property name="firstName" column="FIRSTNAME" not-null="true"
			type="string" />
		<property name="lastName" column="LASTNAME" not-null="true"
			type="string" />
		<set name="lendingProcesses" inverse="true" cascade="all-delete-orphan">
			<key column="PROCESS_ID" />
			<one-to-many class="de.nak.librarymgmt.LendingProcess" />
		</set>
	</class>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.hibernate.model.Publication" table="PUBLICATION">
		<id name="id">
			<generator class="native"/>
		</id>
		<natural-id mutable="true">
			<property name="fieldOfStudy" column="FIELD_OF_STUDY" not-null="true"/>
			<property name="number" not-null="true"/>
		</natural-id>
		<property name="lecturer" not-null="true"/>
		<property name="title" not-null="true"/>
		<set name="lectures" inverse="true" cascade="all-delete-orphan">
			<key column="COURSE_ID"/>
			<one-to-many class="de.nak.hibernate.model.Lecture"/>
		</set>
	</class>
</hibernate-mapping>
 <!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">


<validators>
	<field name="publicationBean.title">
		<field-validator type="requiredstring">
			<message>Der Titel für die Publikation ist obligatorisch</message>
		</field-validator>
	</field>
	<field name="authorSelection">
		<field-validator type="required">
			<message>Der Autor für die Publikation ist obligatorisch</message>
		</field-validator>
	</field>
		<field name="publicationBean.publicationDate">
		<field-validator type="date">
			<message>Das Datum für die Publikation ist obligatorisch</message>
		</field-validator>
	</field>
	<field name="publicationBean.isbn">
		<field-validator type="regex">
			<param name="expression">|ISBN(?:-13)?:?\x20*(?=.{17}$)97(?:8|9)([ -])\d{1,5}\1\d{1,7}\1\d{1,6}\1\d$</param>
			<message>Geben Sie keine oder eine gültige ISBN Nummer ein</message>
		</field-validator>
	</field>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.nak.librarymgmt.model.Book" table="BOOK">
		<id name="id" column="BOOK_ID" type="long">
			<generator class="sequence" />
		</id>
		<property name="title" column="TITLE" type="string" not-null="true"/>
		<set name="authors" table="BOOK_AUTHORS" lazy="false">
			<key column="BOOK_ID"/>
			<element type="string" column="AUTHOR"/>
		</set>
		<property name="publicationDate" column="PUBLICATIONDATE"
			type="timestamp" />
		<set name="keywords" table="BOOK_KEYWORDS" lazy="false">
		<key column="BOOK_ID"/>
		<element type="string" column="KEYWORD"/>
		</set>
		<property name="condition" not-null="true" type="string" />
		<property name="distributed" not-null="true" type="boolean" />
		<property name="reserved" not-null="true" type="boolean" />
		<property name="isbn" column="ISBN" type="string" not-null="true"></property>
		<property name="publisher" column="PUBLISHER" type="string" not-null="true"></property>
		<property name="edition" column="EDITION"  type="string" not-null="true"></property>
	</class>
</hibernate-mapping>